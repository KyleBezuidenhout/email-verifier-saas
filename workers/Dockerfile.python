FROM python:3.11-slim

WORKDIR /app

# Copy backend requirements and install
COPY backend/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend app directory (needed for imports)
COPY backend/app ./app

# Copy both Python worker scripts
COPY workers/enrichment_worker.py .
COPY workers/vayne_worker.py .

# Default to vayne_worker, but can be overridden via Railway start command
CMD ["python3", "vayne_worker.py"]

